<mvc:View controllerName="patientdetails.controller.Patient"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}" titleAlignment="Center">
    <Panel id="pnlIdpntinfo" expandable="true" headerText="{i18n>pntinfo}">
        <form:SimpleForm id="sfIdpntinfo" editable="true">
            <Label id="lblIdname" text="{i18n>name}"/>
            <Input id="inptIdname" required="true" />
            <Label id="lblIddob" text="{i18n>dob}"/>
            <DatePicker id="dpIddob"/>
            <Label id="lblIdgndr" text="{i18n>gender}"/>
            <Select id="slctIdgndr" forceSelection="false">
                <items>
                   <core:Item id="itmIdM" key="M" text="{i18n>M}"/>
                   <core:Item id="itmIdF" key="F" text="{i18n>F}"/>
                   <core:Item id="itmIdT" key="T" text="{i18n>T}"/>
                </items>
            </Select>
            <Label id="lblIdsts" text="{i18n>sts}"/>
            <CheckBox id="chboxIdMa" text="{i18n>Ma}"/>
            <CheckBox id="chboxIdUn" text="{i18n>Un}"/>
            <CheckBox id="chboxIdW" text="{i18n>W}"/>
            <!-- <Select id="slctIdsts" forceSelection="false">
                <items>
                   <core:Item id="itmIdMa" key="Ma" text="{i18n>Ma}"/>
                   <core:Item id="itmIdUn" key="Un" text="{i18n>Un}"/>
                   <core:Item id="itmIdW" key="W" text="{i18n>W}"/>
                </items>
            </Select> -->
            <Label id="lblIdadrs" text="{i18n>address}"/>
            <Input id="inptIdadrs"/>
            <Label id="lblIdphno" text="{i18n>phno}"/>
            <Input id="inptIdphno" required="true"/>
            <HBox id="hbIdpntinfo">
            <Label id="lblIdemail" text="{i18n>email}"/>
            <Input id="inptIdemail" width="560px"/>
            </HBox>
        </form:SimpleForm>
    </Panel>
    <Panel id="pnlIdcontact" expandable="true" headerText="{i18n>pntemgcontact}">
        <form:SimpleForm id="sfIdpntifo" editable="true">
            <Label id="lblIdemgname" text="{i18n>emgname}"/>
            <Input id="inptIdemgname" required="true" />
            <Label id="lblIdemgphno" text="{i18n>emgphno}"/>
            <Input id="inptIdemgpho" required="true"/>
            <HBox id="hbIdemginfo">
            <Label id="lblIdemgrel" text="{i18n>emgrel}"/>
            <Input id="inptIdemgrel" required="true" width="420px"/>  
            </HBox>
        </form:SimpleForm>
    </Panel>
    <Panel id="pnlIdphy" expandable="true" headerText="{i18n>pntphy}">
        <form:SimpleForm id="sdIdphy" editable="true">
            <Label id="lblIdphyname" text="{i18n>phyname}"/>
            <Input id="inpuIdphyname"/>
            <Label id="lblIdphycli" text="{i18n>phycli}"/>
            <Input id="inpuIdphyno"/>
            <Label id="lblIdphyphno" text="{i18n>phyphno}"/>
            <Input id="inpuIdphyhpno"/>
        </form:SimpleForm>
    </Panel>
    <Panel id="pnlIdotr" expandable="true" headerText="{i18n>pntotr}">
    <IconTabBar id="itbIdotrinfo">
    <items>
    <IconTabFilter id="icnIdins" icon="sap-icon://insurance-life" text="Insurance Infornation">
    <content>
    <form:SimpleForm id="sdIdins" editable="true">
            <Label id="lblIdinsname" text="{i18n>insname}"/>
            <Input id="inpuIdinsname"/>
            <Label id="lblIdinsno" text="{i18n>insno}"/>
            <Input id="inpuIdinsno"/>
            <Label id="lblIdinsgrpno" text="{i18n>insgrpno}"/>
            <Input id="inpuIdinsgrpno"/>
    </form:SimpleForm>
    </content>
    </IconTabFilter>
    <IconTabFilter id="icnIdmed" icon="sap-icon://clinical-order" text="Medical Records">
    <content>
        <form:SimpleForm id="sdIdmed" editable="true">
            <Label id="lblIdaller" text="{i18n>aller}"/>
            <RadioButton id="rbtnIdN" text="{i18n>N}"/>
            <RadioButton id="rbtnIdY" text="{i18n>Y}"/>
            <!-- <CheckBox id="chboxIdN" text="No"/>
            <CheckBox id="chboxIdY" text="Yes"/> -->
                <!-- <Select id="slctIdaller" forceSelection="false">
                    <items>
                        <core:Item id="itmIdN" key="N" text="{i18n>N}"/>
                        <core:Item id="itmIdY" key="Y" text="{i18n>Y}"/>
                    </items>
                </Select> -->
            <MessageStrip id="_IDGenMessageStrip" text="If Yes Please Specify the Allergies" showIcon="true" type="Information"></MessageStrip>
            <Label id="lblIdyes" text="{i18n>yes}" visible="false"/>
            <Input id="inptIdyes" visible="false"/>
            <Label id="lblIdmedic" text="{i18n>medic}"/>
            <Input id="inptIdmedic"/>
        </form:SimpleForm>
    </content>
    </IconTabFilter>
    </items>
    </IconTabBar>
    </Panel>
    <footer>
        <Bar id="barIdsub">
            <contentMiddle>
                <Button id="btnIdsub" icon="sap-icon://accept" text="{i18n>s}" type="Success" press="onSubmit" tooltip="press the button to submit the form"/>
            </contentMiddle>
        </Bar>
    </footer>
    </Page>
</mvc:View>